<?xml version="1.0" encoding="UTF-8"?>
<selector  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="#AAAAAA" android:endColor="#AAAAAA" android:angle="270" />
            <corners android:radius="5dp" />         
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <gradient android:startColor="#AAAAAA" android:endColor="#AAAAAA" android:angle="270" />
            <corners android:radius="5dp" />         
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:startColor="#BBBBBB" android:endColor="#BBBBBB" android:angle="270" />
            <corners android:radius="5dp" /> 
        </shape>
    </item>
</selector>