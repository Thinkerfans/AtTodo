{
    "name":"@Todo",
    "version":"0.8.2",
    "manifest_version":2,
    "icons":{
        "16":"icon.png",
        "48":"icon.png",
        "128":"icon.png"
    },
    "description":"@todo是一种态度",
    "homepage_url":"http://127.0.0.1",
    "background":{
        "page":"background.html"
    },
    "permissions":[
        "contextMenus",
        "notifications",
        "tabs",
        "http://*/*", "https://*/*"
    ],
    "browser_action":{
        "default_title":"@todo是一种态度",
        "default_icon":"icon.png",
        "default_popup":"popup.html"
    }
}